<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/vehicle_image"
        android:layout_width="120dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/vehicle_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:text="nom"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/layout_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_categorieco2"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_nom">

        <TextView
            android:id="@+id/vehicle_prixjournalierbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" € / jour" />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/layout_categorieco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catégorie CO2: " />

    <TextView
        android:id="@+id/vehicle_categorieco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="categorieco" />



    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>