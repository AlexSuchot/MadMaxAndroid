<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/vehicle_image"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/vehicle_promotion"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/promotiondesign"
        android:paddingLeft="10dp"
        android:text="0%"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/vehicle_image"
        app:layout_constraintTop_toTopOf="@+id/vehicle_image"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/vehicle_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="nom"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vehicle_prixjournalierbase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="prixjournalierbase"
        app:layout_constraintBottom_toTopOf="@+id/vehicle_categorieco2"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image"
        app:layout_constraintTop_toBottomOf="@+id/vehicle_nom" />

    <TextView
        android:id="@+id/vehicle_categorieco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:text="categorieco2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vehicle_image" />


</android.support.constraint.ConstraintLayout>